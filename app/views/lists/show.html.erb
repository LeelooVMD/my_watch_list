<div class= 'home-container d-flex'>
  <div class= 'menu'>
    <%= image_tag('avatar.jpg', size: 150 ) %>
    <div>
      <ul>
        <% if user_signed_in? %>
          <li>
            <%= link_to "Home", root_path %>
          </li>
          <li>
            <%= link_to "My Watchlists", lists_path %>
          </li>
          <li>
            <%= link_to "Discover", '#' %>
          </li>
          <li>
            <%= link_to "Settings", '#' %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li>
            <%= link_to "Home", root_path, class: "" %>
          </li>
          <li>
            <%= link_to "Login", new_user_session_path, class: "" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class= 'search-bar'>
    <div class = 'd-flex justify-content-between align-items-center'>
      <div class = 'type-btn'>
        <a href="/lists"><button>Back</button></a>
        <a href="/lists/:list_id/moviemarks/new"><button>Add</button></a>
      </div>
      <div class="list-title">
        <h4><%= @list.name %></h4>
      </div>
    </div>
  </div>
</div>
